<%= render :partial => 'feed/menu' %>

<div align='center'><%= render 'form' %></div>
<br />

<div align='center' class='stream-container'>
<% @posts.each do |p| %>
   <b><%= p[:user].name %></b><br />
   <%= p[:text].html_safe %> <br />
   <p><%= p[:date]  %></p>
   <%= link_to 'Comment', new_comment_path(:post => p[:id]), :remote => true %> 
   <% if p[:comments] != [] %>
      
      <% p[:comments].each do |c| %>
	 <p style = 'margin-left:5em;' >
	 <b><%= c.user.name %></b><br />
	 <%= c.text %> <br />
	 <p><%= c.created_at  %></p>
	 </p>
      <% end %>
   <% end %>
   <div class="new-comment" id="<%= "new-c#{p[:id]}" %>"> </div>
<% end %>
</div>